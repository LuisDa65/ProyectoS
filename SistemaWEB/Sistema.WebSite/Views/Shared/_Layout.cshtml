@{
    Sistema.BL.PermisosHandler permisos = new Sistema.BL.PermisosHandler();
    Sistema.TL.Permisos listaPermisos = permisos.DamePermisos(1);

}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>


    <script type="text/javascript" src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    
    
    <link href="~/SideBar/style.css" rel="stylesheet" />
    <script src="~/SideBar/icons.js"></script>
    <script src="~/SideBar/script.js"></script>

</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light blue fixed-top">
        <button id="sidebarCollapse" class="btn navbar-btn">
            <i class="fas fa-lg fa-bars"></i>
        </button>
        <a class="navbar-brand">

            <img src="~/Resources/logo.png" alt="" width="100" height="60" />
            <h5 id="logo">TECNILIGTH</h5>

        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" id="link" href="@Url.Action("CerrarSesion","Principal")">
                        <img src="~/Resources/Salir.png" alt="Salir" />
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="link" href="#">
                        <i class="fas fa-id-card"></i>Usuario
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="wrapper fixed-left">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h5>MENU</h5>
            </div>

            <ul class="list-unstyled components">
                @if (listaPermisos.Herramienta == 1)
                {
                    <li>@Html.ActionLink("Inventario herramienta", "Index", "Herramienta")</li>
                }
                @if (listaPermisos.MateriaPrima == 1)
                {
                    <li>@Html.ActionLink("Inventario de materia prima", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.Productos == 1)
                {
                    <li>@Html.ActionLink("Catálogo de productos", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.Clientes == 1)
                {
                    <li>@Html.ActionLink("Catálogo de clientes", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.CotizacionVentas == 1)
                {
                    <li>@Html.ActionLink("Cotización y ventas", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.Istalacion == 1)
                {
                    <li>@Html.ActionLink("Instalaciónes", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.Compras == 1)
                {
                    <li>@Html.ActionLink("Compras", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.VentasRealizadas==1)
                {

                    <li>@Html.ActionLink("Ventas realizadas", "Index", "Usuarios")</li>
                }
                @if (listaPermisos.Reportes == 1) 
                {
                   <li>@Html.ActionLink("Reportes", "Index", "Usuarios")</li>
                }
   
            </ul>
        </nav>

        <div class="container body-content">
            <br />
            <br />
            <br />
            <br />
            <br />
            @RenderBody()

        </div>

    </div>

</body>
</html>